<% if user_signed_in? %> <div class="p-3 flex flex-col rounded-xlitems-center">
  <div class="rounded-xl shadow-lg"><% if current_user.profile.images.attached? %><%= image_tag current_user.profile.images.first, class: "rounded-xl w-64 user-image " %><% else %> <img src="https://www.vermontteddybear.com/dw/image/v2/BDKM_PRD/on/demandware.static/-/Sites-master-catalog-vtb/default/dw0c5c4cde/images/VTB/vtb-23846-18ohsosoftteddybear-lightbrown_feature4_20201012_0843.jpg?sw=600" class="rounded-xl w-full user-image " /><% end %> <div class="flex justify-between">
      <div class="tname text-xl float-left p-4"><%= current_user.profile.name %> <span class="font-light"><%= calculate_age(current_user.profile.dob) %> lat </span>
      </div>
    </div>
    <div class="pl-4 pb-2 text-gray-400">
      <p>Bio: <%= current_user.profile.bio %> </p>
      <p>Plec: <%= current_user.profile.gender %> </p>
      <p>Skad: <%= current_user.profile.location %> </p>
      <p>Zainteresowania: <%= current_user.profile.interests %> </p>
      <p>Denominacja: <%= current_user.profile.denomination %> </p>
      <p>Moj Kosciol: <%= current_user.profile.attended_church %> </p>
      <p>Praca: <%= current_user.profile.work %> </p>
      <p>Hobby: <%= current_user.profile.hobbies %> </p>
      <p>Swiadectwo: <%= current_user.profile.testimony %> </p>
    </div>
  </div>            <%= link_to "current_user_show", current_user %>

  
  <% else %> <div class="h-screen pb-14 bg-white bg-cover">
    <!--Main-->
    <div class="container pt-24 md:pt-48 px-6 mx-auto flex flex-wrap flex-col md:flex-row items-center">
      <div class="w-full xl:w-2/5 py-6 overflow-y-hidden">
        <img class="w-6/6 mx-auto lg:mr-0 slide-in-bottom" src="/couple.png">
      </div>
      <div class="flex flex-col w-full xl:w-3/5 justify-center lg:items-start overflow-y-hidden">
        <h1 class="my-4 text-3xl md:text-5xl text-green-800 font-bold leading-tight text-center md:text-left slide-in-bottom-h1">Wszystko, co czynicie, niech się dzieje w miłości.</h1>
        <p class="leading-normal text-base md:text-2xl mb-8 text-center md:text-left slide-in-bottom-subtitle">Poznajmy sie w Nim.</p>
      </div>
    </div>
  </div><% end %>